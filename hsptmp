#include "func.hsp"

//初期処理
title "Erouge" //+ "ローグっぽいなにか名状しがたい(ry"

;画面生成
cls 4
buffer 1
//picload "pic\\m87.png"
screen 0
color 0, 0, 0
boxf 0, 0, 680, 480
clearScreen
goto *main

#deffunc clearScreen
	color 192,192,192
	boxf 0,0,680,300
	color 128,128,128
	boxf 85,33,560,267
	color 64,64,64
	boxf 170,66,470,234
	color 0,0,0
	boxf 256,100,384,200
	color 255,255,255
	line 0,0,256,100
	line 0,300,256,200
	line 640,0,384,100
	line 640,300,384,200
	line 256,100,256,200
	line 256,100,384,100
	line 384,100,384,200
	line 256,200,384,200
	line 0,300,680,300
return
