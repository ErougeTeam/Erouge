//return
#deffunc eSt int inHP, int inAtt, int inSpd, int inTrn, str name
	mes "敵を見つけた!"
	eHP　= floor * inHP
	eatt = floor * inAtt
	espd = inSpd
	eturn = inTrn
	ename = name
//	showEnemy name
return
#deffunc repair int num, str name
	mes name + "を見つけた\nHPが回復した"
	HP = HP + num
	if HP >= MHP{
		HP = MHP
	}
return
*DisplayHP
	color 128, 128, 128
	boxf 10, 465, 10 + 256, 475
	setHSV 120 * limit(HP, 0, abs(HP)) / MHP, 100, 60
	boxf 10, 465, 10 + 256 * limit(HP, 0, abs(HP)) / MHP, 475
	color 255,255,255
	pos 5, 310
	return
*showS
	color 255,255,255
	pos 5,420
	mes "HP : " + HP + "/" + MHP + "   ATTACK : " + att + "   DEXTERITY : " + dex
	mes "歩数：" + sstep + " 階層：" + floor
	pos 10, 310
	return
*lookEnemy
	color 255,255,255
	pos 200, 310
	playerFP = MHP + att * 12 + dex * 4 + 1.0
	enemyFP = 1.0
	if(espd > 0) : enemyFP = double( eHP + eatt * 24 ) / sqrt(( 1.0 + double(eturn) ) * double(sqrt(espd))) + 1.0
	rateFP = double(enemyFP) * double(enemyFP) / double(playerFP) / double(playerFP)
	if(rateFP > 3.0) { mes "恐怖で背筋が凍る"
	} else : if(rateFP > 2.0) { mes "とても強そうだ"
	} else : if(rateFP > 1.5) { mes "かなり強そうだ"
	} else : if(rateFP > 1.0) { mes "強そうだ"
	} else : if(rateFP > 0.85) { mes "互角だ"
	} else : if(rateFP > 0.7) { mes "弱そうだ"
	} else : if(rateFP > 0.5) { mes "すこし弱そうだ"
	} else : if(rateFP > 0.3) { mes "かなり弱そうだ"
	} else : if(rateFP > 0.25) { mes "とても弱そうだ"
	} else { mes "負ける気がしない"
	}
	logmes "FP" + playerFP + "/" + enemyFP + " = " + rateFP + "[" + eturn + "/" + espd + "]" + "[" + eHP + "/" + eatt + "]" + ( eHP + eatt * 24 ) + " @" + sqrt(( 1.0 + double(eturn) ) * double(sqrt(espd)))
	pos 10, 310
	return
	
	
//メイン処理
*main
	ear = 3
	step = 0
pos 5,310
mes {"あなたは迷宮に行きイェンダーの耳飾りを回収することを、
	強いられているんだ！
	Push any key."}
HP = 10
MHP = 10
att = 3
dex = 3
floor = 1
//isObserve = 0
onkey *c
stop


*c
	onkey 0
	clw
	mes {"さて、どうしようか
	進む：↑　戻る：↓
	休む：←　探す：→"}
	sstep = step + rnd(20)
	gosub *showS
	//gosub *DisplayHP
	attk = att
	step += 1
	turn = 0

	repeat
		stick key;カーソルキーの管理
		getkey flag, 27;ローグキー配置用
		getkey r, 82;r rest
		getkey s, 83;s explore
		getkey q, 81;suicide
		getkey left, 72;h left
		getkey right, 76;l right
		getkey up, 75;k up
		getkey down, 74;j down
		getkey shift, 16;大文字用
		if key = 1 | left = 1 : goto *rest
		if key = 2 | up = 1 : goto *front
		if key = 4 | right = 1 | s = 1 : goto *explore
		if key = 8 | down = 1: goto *back
		if flag = 1 : end
		if q = 1 & shift = 1:goto *Qy@
		if r = 1 & shift = 1:goto *rest
		wait 10
    loop
    stop
*front
	clm
	mes"先に進んだ\nPush space key."
	floor += 1
	if Mfloor <= floor{
		Mfloor = floor
	}
	onkey *event
	stop
*back	
	clm
	mes"後ろに戻った\nPush space key."
	floor -= 1
	onkey *event
	stop
	
*explore
	clm
	mes"辺りを探索した\nPush space key."
	onkey *event
	stop
	
*rest
	clm
mes"少し休んだ\nPush space key."
	step += int(MHP / 3)
	HP += int(MHP / 3)
	if HP >= MHP{
		HP = MHP
	}
	onkey *c
	stop
	
*Qy@

	clm
	mes{"本当にゲームを閉じますか？
		はい：y
		いいえ:　n"}

		repeat
		getkey y, 89
		getkey n, 78
		if y = 1 : goto *Qy@2
		if n = 1 : goto *c
		wait 10
	loop
	stop

*Qy@2
	y = 0
	mes "@を押してください"
	repeat
		getkey @, 192
		if @ = 1 : goto *score
		wait 10
	loop
	stop

*event
	onkey 0
	clm
	isObserve = 0
	if floor <= 0{
		floor = 0
	}
	if floor >= 26{
		floor = 26
	}
	
	eve = floor + rnd(4)
	if eve = 0 & ear = 2 : goto *out
	if eve = 0{
		mes"外には出られない"
		onkey *c
		stop
	}

	if eve = 29 & ear = 3 :goto *yendor
	if eve >= 27 : eve = 26

	
		switch eve ;イベントが重複しているから関数？かモジュール？にしたい
			case 1
				repair floor, "クスリ苔"
				onkey *c
				stop
				swbreak
			case 2
				eSt 2, 1, 1, 0,"イーク"
				onkey *battle
				stop
				swbreak
			case 3
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 4
				eSt 2, 2, 2, 1, "サーペント"
				onkey *battle
				stop
				swbreak
			case 5
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 6
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 7
				repair floor * 2, "ヤク草"
				onkey *c
				stop
				swbreak
			case 8
				eSt 2, 1, 1, 0, "ゴブリン"
				onkey *battle
				stop
				swbreak
			case 9
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 10	
				repair floor, "ヤク草"
				onkey *c
				stop
				swbreak
			case 11
				eSt 3, 2, 1, 0, "ホブゴブリン"
				onkey *battle
				stop
				swbreak
			case 12
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 13
				eSt 1, 3, 2, 1, "スプリガン"
				onkey *battle
				stop
				swbreak
			case 14
				eSt 2, 2, 1, 0, "スケルトン"
				onkey *battle
				stop
				swbreak
			case 15
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 16
				eSt 2, 1, 1, 0, "迷宮蝙蝠"
				onkey *battle
				stop
				swbreak
			case 17
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 18
				eSt 6, 4, 5, 3, "スライム"
				onkey *battle
				stop
				swbreak
			case 19
				eSt 6, 2, 2, 0, "リビングアーマー"
				onkey *battle
				stop
				swbreak
			case 20
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 21	
				repair floor, "ヤク草"
				onkey *c
				stop
				swbreak
			case 23
				eSt 4, 3, 3, 2, "オーガ"
				onkey *battle
				stop
				swbreak
			case 24
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 25
				mes"冒険者の亡骸だ"
				onkey *wear
				stop
				swbreak
			case 26
				eSt 8, 7, 3, 2, "ドラゴン"
				onkey *battle
				stop
				swbreak
			;敵増やして Add "Lily Uncle"
		swend
		onkey *c
		stop

*yendor
		mes{"イェンダーの耳飾りを見つけた
			外に出るため戻ろう"}
		ear = 2
		onkey *c
		stop
*out
	clm
	ear = 1
	mes"あなたは耳飾りを手に、迷宮を去った\nPush any key."
	onkey *score
	stop

*score
	onkey 0
	scr = ( MHP + att + dex ) * 50 * Mfloor / ear /int(( step / 100 ) + 1)
	mes"あなたのスコアは" + scr + "でした\nPush any key."
	onkey *ending
	stop
	
*ending
	onkey 0
	end

;戦闘用
*battle
	//title "" + isObserve + "[eve]" + eve
	title "" + espd
	onkey 0
	dmg = eatt
	clw
	gosub *showS
	//gosub *DisplayHP
	if HP <= 0{
		mes "あなたは死んでしまった……"
		onkey *score
		stop
	}
	if eHP <= 0{
		clearScreen
		mes "敵を倒した！"
		onkey *glow
		stop
	} 
	turn += 1
	mes ename 
	mes {"あなたはどうする
		攻撃：↑　逃げる：↓
		守る：←　溜める：→　"}//観察 : *"}
	
	
	repeat
		stick key;カーソルキーの管理
		getkey flag, 27;ローグキー配置用
		getkey left, 72;h left
		getkey right, 76;l right
		getkey up, 75;k up
		getkey down, 74;j down
		getkey f, 70
		getkey asterisk, 186:
		getkey shift, 16:
		getkey asteriskT, 106:
		if key = 1 | left = 1: goto *guard;hidari
		if key = 2 | up = 1: goto *attack;ue
		if key = 4 | right = 1: goto *charge;migi
		if key = 8 | down = 1: goto *escape;sita
		if (shift = 1 & asterisk = 1) | asteriskT = 1: gosub *lookEnemy
		if shift = 1 & f = 1: goto *fight
		//if (shift = 1 & asterisk = 1) | asteriskT = 1 {
			//if isObserve = 0 {
				//isObserve = 1
				//pos 5, 400
				//mes "さらに詳しく : *"
				//gosub *lookEnemy
				//onkey *battle
				//stop
			//} else {
				//isObserve = 0
				//goto *observe;
			//}
		//}
		if flag = 1 : end
		wait 10
    loop
	stop

*observe
	clm
	mes ename
	gosub *eAI
	
	mes "ステータス　HP "+ eHP +"  ATTACK " + eatt + "  " + ( eturn + 1 ) + "回目攻撃 / " + espd + "回毎攻撃"
	onkey *battle
	stop

*fight
	repeat
		if HP <= MHP / 2  | eHP <= 0 : goto *battle
		HP = HP - eatt
		eHP = eHP - attk
		attk = att
	loop
*guard
	clm
	mes ename
	mes "あなたは身構えた"
	dmg = limit(dmg - dex,0,dmg)
	gosub *eAI
	
	if turn \ espd ! eturn { mes ename + "は襲ってこなかった……"
	}
	onkey *battle
	stop
	
*attack
	clm
	mes ename
	gosub *eAI
	mes "あなたの攻撃！\n"+ attk + "のダメージ！"
	eHP = eHP - attk
	attk = att
	onkey *battle
	stop
	
*charge
	clm
	mes ename
	gosub *eAI
	mes "あなたは力を溜めている……"
	attk = attk + att + (dex * 2)
	onkey *battle
	stop
	
*escape
	clm
	mes ename
	if floor / espd + rnd( limit(floor/espd,1,30)) <= dex + rnd(dex){
		mes"あなたは無事に" + ename + "から逃げ切った"
		onkey *c
		stop
	}
	mes ename + "に追いつかれた！"
	wait 20 
	gosub *eAI
	onkey *battle
	stop
	
*glow
	clw
	gosub *showS
	//gosub *DisplayHP
	mes {"あなたは成長した
			どのステータスを上げる？
			MaxHP：↑　ATTACK：→
			DEXTERITY：←"}

	repeat
		stick key;カーソルキーの管理
		getkey flag, 27;ローグキー配置用
		getkey left, 72;h left
		getkey right, 76;l right
		getkey up, 75;k up
		if key = 1 | left = 1{
			clm
			mes"DEXTERITYが上がった"
			dex = dex + int(( floor / 3 ) + 0.5)
			onkey *c
			stop
		};hidari
		if key = 2 | up = 1{
			clm
			mes"MaxHPが上がった"
			MHP = MHP + floor
			onkey *c
			stop
		};ue
		if key = 4 | right = 1{
			clm
			mes"ATTACKが上がった"
			att = att + int( ( floor / 2 ) + 0.5)
			onkey *c
			stop
		};migi
		if flag = 1 : end
		wait 10
    loop
	stop
*wear
	clw
	mes {"あなたは装備品を見つけた。
			なにがある？
			鎧だ！：↑　剣だ！：→
			籠手だ！：←"}
	gosub *showS
	//gosub *DisplayHP
	repeat
		stick key;カーソルキーの管理
		getkey flag, 27;ローグキー配置用
		getkey left, 72;h left
		getkey right, 76;l right
		getkey up, 75;k up
		if key = 1 | left = 1{
			clm
			mes"DEXTERITYが上がった"
			dex = dex + int( ( floor / 4 ) + 1)
			onkey *c
			stop
		};hidari
		if key = 2 | up = 1{
			clm
			mes"MHPが上がった"
			MHP = MHP + int( ( floor / 2 ) + 1)
			onkey *c
			stop
		};ue
		if key = 4 | right = 1{
			clm
			mes"ATTACKが上がった"
			att = att + int( ( floor / 3 ) + 1)
			onkey *c
			stop
		};migi
		if flag = 1 : end
		wait 50
    loop
	stop
*eAI
	if turn \ espd = eturn{
		mes ename + "の攻撃！"
		mes "" + dmg + "のダメージ！"
		HP = limit (HP - dmg, 0, MHP)
		
		wait 10
	}
	return